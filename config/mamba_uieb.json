{
  "name": "MAMBA_UIE_ENHANCED",
  "phase": "train",
  "gpu_ids": [0],
  
  "path": {
    "log": "/content/drive/MyDrive/CLIP-UIE/logs",
    "tb_logger": "/content/drive/MyDrive/CLIP-UIE/tb_logger",
    "results": "/content/drive/MyDrive/CLIP-UIE/results",
    "checkpoint": "/content/drive/MyDrive/CLIP-UIE/Checkpoint/diffusion_model_mamba",
    "resume_state": null
  },
  
  "datasets": {
    "train": {
      "name": "UIEB_train",
      "mode": "LRHR",
      "dataroot_HR": "/content/drive/MyDrive/CLIP-UIE/datasets/UIEB_processed_32_256/hr_256",
      "dataroot_LR": "/content/drive/MyDrive/CLIP-UIE/datasets/UIEB_processed_32_256/lr_32",
      "l_resolution": 32,
      "r_resolution": 256,
      "batch_size": 4,
      "num_workers": 4,
      "use_shuffle": true,
      "data_len": -1
    },
    "val": {
      "name": "UIEB_val",
      "mode": "LRHR",
      "dataroot_HR": "/content/drive/MyDrive/CLIP-UIE/datasets/UIEB_processed_32_256/hr_256",
      "dataroot_LR": "/content/drive/MyDrive/CLIP-UIE/datasets/UIEB_processed_32_256/lr_32",
      "l_resolution": 32,
      "r_resolution": 256,
      "data_len": 10
    }
  },
  
  "model": {
    "which_model_G": "mamba_unet",
    "finetune_norm": false,
    
    "beta_schedule": {
      "train": {
        "schedule": "cosine",
        "n_timestep": 1000,
        "linear_start": 1e-6,
        "linear_end": 1e-2,
        "cosine_s": 8e-3
      },
      "val": {
        "schedule": "cosine",
        "n_timestep": 500
      }
    },
    
    "diffusion": {
      "image_size": 256,
      "channels": 3,
      "loss_type": "l1",
      "conditional": true,
      "sample_num": 8,
      "use_perceptual": true,
      "physical_guidance": true,
      "edge_guidance": true,
      "iqa_guidance": true,
      "adaptive_lambda": false,
      "use_wavelet": false,
      "use_cross_attention": false,
      "pyramid_levels": 3,
      "learn_prompt_path": "/content/drive/MyDrive/CLIP-UIE/Checkpoint/prompt/iter_1000.pth"
    }
  },
  
  "train": {
    "n_iter": 60000,
    "val_freq": 100,
    "save_checkpoint_freq": 100,
    "print_freq": 100,
    
    "optimizer": {
      "type": "adamw",
      "lr": 2e-4,
      "weight_decay": 1e-4,
      "beta1": 0.9,
      "beta2": 0.999
    },
    
    "ema_scheduler": {
      "step_start_ema": 5000,
      "update_ema_every": 1,
      "ema_decay": 0.9999
    }
  },
  
  "logger": {
    "print_freq": 100,
    "save_checkpoint_freq": 5000,
    "use_tb_logger": true,
    "wandb": {
      "project": "mamba_underwater_enhancement",
      "entity": null
    }
  }
}